<p id='ui_title'> Users </p>
	<div id='user_index'>
		Type to find users: <%= form_tag(users_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Users" %>
       <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
     	<% end %>

		<ul >
		<% @users.each do |u|%>
			<li class="user_pro">
			RESULT:	<p > <%= link_to u.name, user_path(u), :class => 'user_pro_name' %>
				<p class="user_pro_location"> <%= u.location %></p>
				<p> <img class='ui_avatar' src='<%= u.avatar %>'/> </p>
			</li>
		<% end %>




			<% @all_users.each do |u| %>
				<li class="user_pro">
					<p > <%= link_to u.name, user_path(u), :class => 'user_pro_name' %>
					<p class="user_pro_location"> <%= u.location %></p>
					<p> <img class='ui_avatar' src='<%= u.avatar %>'/> </p>
				</li>
			<% end %>
		</ul>
	</div>